import serial

# 시리얼 포트 설정
ser = serial.Serial('COM6', 115200)  # 'COM1'은 사용할 시리얼 포트의 이름입니다. 9600은 보레이트(전송 속도)입니다.

try:
    while True:
        data = ser.readline().decode('utf-8').strip()
        print(f"수신된 데이터: {data}")

except UnicodeDecodeError as e:
    print(f"디코딩 오류: {e}")
except KeyboardInterrupt:
    ser.close()


except KeyboardInterrupt:
    ser.close()  # 프로그램을 종료하면 시리얼 포트를 닫습니다.
